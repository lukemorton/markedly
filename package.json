{
  "name": "markedly",
  "description": "Turn markdown directories into JSON",
  "version": "0.0.21",
  "repository": "https://github.com/lukemorton/markedly",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^1.22.0",
    "fs-promise": "^1.0.0",
    "lodash.partial": "^4.2.1",
    "marked": "^0.3.6",
    "striptags": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^21.0.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": "7.0.0"
  },
  "main": "dist/lib/markedly.js",
  "bin": {
    "markedly": "dist/bin/markedly.js"
  },
  "scripts": {
    "prepare": "npm run prepare:bin && npm run prepare:src",
    "prepare:bin": "babel bin/ -d dist/bin/ --ignore *.test.js",
    "prepare:src": "babel src/ -d dist/lib/ --ignore *.test.js",
    "test": "standard && jest"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp/"
    ]
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "it",
      "expect",
      "beforeEach",
      "afterEach"
    ]
  }
}
